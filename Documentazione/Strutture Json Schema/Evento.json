{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Evento",
    "definitions": {
        "Evento": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "integer"
                },
                "nome": {
                    "type": "string"
                },
                "descrizione": {
                    "type": "string"
                },
                "data": {
                    "type": "string",
                    "format": "date"
                },
                "oraInizio": {
                    "type": "string",
                    "format": "time"
                },
                "oraFine": {
                    "type": "string",
                    "format": "time"
                },
                "tipologiaEvento": {
                    "$ref": "TipologiaEvento.json"
                },
                "personaId": {
                    "type": "integer"
                },
                "aulaId": {
                    "type": "integer"
                },
                "corsoId": {
                    "type": "integer"
                },
                "eventoRicorrentId": {
                    "type": "integer"
                },
                "version": {
                    "type": "integer"
                }
            },
            "required": [
                "nome",
                "data",
                "oraInizio",
                "oraFine",
                "tipologiaEvento", 
                "persona", 
                "aula", 
                "corso",
                "eventoRicorrente"
            ],
            "title": "Evento"
        }
    }
}